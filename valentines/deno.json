{
  "tasks": {
    "dev": "deno run -A npm:next@latest dev",
    "build": "deno run -A npm:next@latest build",
    "start": "deno run -A npm:next@latest start",
    "test": "deno run -A npm:vitest run",
    "test:watch": "deno run -A npm:vitest"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["deno.ns", "dom", "dom.iterable"]
  },
  "imports": {
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.18",
    "@testing-library/jest-dom": "npm:@testing-library/jest-dom@^6.9.1",
    "@testing-library/react": "npm:@testing-library/react@^16.3.2",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.1.3",
    "happy-dom": "npm:happy-dom@^20.5.0",
    "jsdom": "npm:jsdom@^28.0.0",
    "react": "npm:react@^19",
    "react-dom": "npm:react-dom@^19",
    "next": "npm:next@latest",
    "@std/assert": "jsr:@std/assert@1",
    "tailwindcss": "npm:tailwindcss@^4.1.18",
    "typescript": "npm:typescript@^5.9.3",
    "vitest": "npm:vitest@^4.0.18"
  },
  "nodeModulesDir": "auto"
}
